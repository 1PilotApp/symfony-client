<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="one_pilot_ping" path="/onepilot/ping">
        <default key="_controller">one_pilot_client.ping_controller::index</default>
    </route>
    <route id="one_pilot_validate" path="/onepilot/validate">
        <default key="_controller">one_pilot_client.validate_controller::index</default>
    </route>
    <route id="one_pilot_mailtester" path="/onepilot/mail-tester">
        <default key="_controller">one_pilot_client.mail_tester_controller::send</default>
    </route>
    <route id="one_pilot_errors" path="/onepilot/errors">
        <default key="_controller">one_pilot_client.errors_controller::index</default>
    </route>
</routes>
